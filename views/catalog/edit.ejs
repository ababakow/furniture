<% layout('/layouts/boilerplate') %> 
<div class="row after-nav">
    <h1>Редагувати продукт</h1>
    <div class="col-8 offset-2">
        <form action="/catalog/<%=product.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Назва</label>
                <input type="text" class="form-control" id="title" name="title" value="<%=product.title%>">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Опис</label>
                <textarea class="form-control" name="description" id="description" rows="3"><%=product.description%></textarea>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Категорія</label>
                <select class="form-select" id="category" name="category">
                    <% for(let category of Object.keys(categories)){ %> 
                        <% if (category === product.category){ %> 
                            <option value="<%=category%>" selected><%=categories[category]%></option>
                        <% } else { %> 
                            <option value="<%=category%>"><%=categories[category]%></option>
                        <% } %> 
                    <% } %> 
                </select>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label">Фото</label>
                <input type="file" class="form-control" id="images" name="images" multiple>
            </div>
            <div class="mb-3">
                <a href="/catalog/<%=product.id%>" class="btn btn-primary">Назад</a>
                <button type="submit" class="btn btn-primary">Зберегти</button>
            </div>   
            <div class="mb-3">
                <% product.images.forEach(function(img,i){ %>
                    <img src="<%=img.url%>" class="img-thumbnail">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="img-<%=i%>"
                            name="deleteImages[]" value="<%=img.name%>">
                        <label class="form-check-label" for="img-<%=i%>">Delete?</label>
                    </div>
                <% }) %> 
            </div>         
        </form>
    </div>
</div>
