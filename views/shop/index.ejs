<% layout('/layouts/boilerplate') %> 
<div class="d-flex my-3">
        <h1 class="mx-auto align-self-center mb-0">Магазин готової продукції</h1>
        <a href="/shop/new" class="btn btn-success align-self-center add-new">Додати продукт</a>
</div>
<div class="row">
    <% for(let item of shopItems) { %>
        <div class="card" style="width: 18rem;">
            <% if(item.images.length){ %> 
                <img src="<%=item.images[0].urlMd%>" class="card-img-top" alt="...">
            <% } else { %> 
                <img src="/imgs/navbar/logo.svg" style="background-color: blue;" class="card-img-top" alt="...">
            <% } %> 
            <div class="card-body">
                <h5 class="card-title"><%=item.title%></h5>
                <p class="card-text"><%=item.description%></p>
                <% if (item.inStock){ %>  
                    <p class="card-text">В наявності</p>
                <% } else { %> 
                    <p class="card-text">Товар тимчасово відсутній</p>
                <% } %> 
                <p class="card-text"><%=item.price%> грн.</p>
                <a href="/shop/<%=item.id%>" class="btn btn-primary">Докладніше</a>
            </div>
        </div>
    <% } %> 
    <div class="after-nav"></div>
</div>