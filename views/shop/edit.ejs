<% layout('/layouts/boilerplate') %> 
<div class="row after-nav">
    <h1>Редагувати продукт</h1>
    <div class="col-8 offset-2">
        <form action="/shop/<%=item.id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Назва</label>
                <input type="text" class="form-control" id="title" name="title" value="<%=item.title%>" required>
                <div class="invalid-feedback">
                    Це поле має бути заповнене.
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Опис</label>
                <textarea class="form-control" name="description" id="description" rows="3" required><%=item.description%></textarea>
                <div class="invalid-feedback">
                    Це поле має бути заповнене.
                </div>
            </div>
            <div class="mb-3">
                <label for="in-stock" class="form-label">Наявність</label>
                <select class="form-select" id="in-stock" name="inStock" required>
                        <option value="true" <%=(item.inStock)?"selected":""%>>В наявності</option>
                        <option value="false" <%=(!item.inStock)?"selected":""%>>Товар тимчасово відсутнійсті</option>                    
                </select>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Ціна</label>
                <input type="text" class="form-control" id="price" name="price" value="<%=item.price%>" required>
                <div class="invalid-feedback">
                    Це поле має бути заповнене.
                </div>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label">Фото</label>
                <input type="file" class="form-control" id="images" name="images" multiple>
            </div>
            <div class="mb-3">
                <a href="/shop/<%=item.id%>" class="btn btn-primary">Назад</a>
                <button type="submit" class="btn btn-primary">Зберегти</button>
            </div>   
            <div class="mb-3">
                <% item.images.forEach(function(img,i){ %>
                    <img src="<%=img.url%>" class="img-thumbnail">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="img-<%=i%>"
                            name="deleteImages[]" value="<%=img.name%>">
                        <label class="form-check-label" for="img-<%=i%>">Delete?</label>
                    </div>
                <% }) %> 
            </div>         
        </form>
    </div>
</div>
<script src="/javascripts/validateForms.js"></script>
